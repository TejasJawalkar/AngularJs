{
    "compilerOptions": {
        "target": "ES5",                      // Set the target ECMAScript version
        "module": "ES6",                      // Set module format for ES6
        "outDir": "./dist",                // Place the compiled JavaScript files inside dist/src
        "rootDir": "./src",                    // Your TypeScript source files are in the 'src' folder
        "removeComments": true,                // Remove comments in the compiled JS files
        "strict": false,                       // Disable strict type checking
        "esModuleInterop": true,               // Ensures proper module compatibility
        "skipLibCheck": true,                  // Skip library file checks
        "forceConsistentCasingInFileNames": true // Ensure consistent casing in filenames
    },
    "include": [
        "src/**/*.ts"  // Include all TypeScript files in the 'src' folder
    ]
}
